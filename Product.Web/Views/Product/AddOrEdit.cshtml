@model Product.Web.ViewModels.ProductVM
@{
    Layout = null;
}

@using (Html.BeginForm("Save", "Product", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
<div class="form-group">
    @*@Html.DropDownListFor(M => M.ProductGroup, new SelectList(Model.ProductGroup, "Value", "Text"), new { @class = "control-label" })*@

    @Html.DropDownListFor(m => m.ProductGroupId, (IEnumerable<SelectListItem>)ViewBag.ProductGroups, new { @class = "form-control select2" })
</div>
    <div class="form-group">
        @Html.Label("Product Description", new { @class = "control-label" })
        @Html.EditorFor(model => model.ProductDescription, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ProductDescription)
    </div>
    <div class="form-group">
        @Html.Label("Product Number", new { @class = "control-label" })
        @Html.EditorFor(model => model.ProductNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ProductNumber)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "control-label" })
        @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Active, new { @class = "control-label" })
        <div class="input-group">
            @Html.CheckBoxFor(model => model.Active, new { @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}