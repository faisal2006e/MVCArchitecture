@model Product.Web.ViewModels.AgreementVM
@{
    Layout = null;
}



@using (Html.BeginForm("Save", "Agreement", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        @Html.Label("Product Group", new { @class = "control-label" })
        @Html.DropDownListFor(m => m.ProductGroupId, (IEnumerable<SelectListItem>)ViewBag.ProductGroups, new { @class = "form-control select2" })
        @Html.ValidationMessageFor(model => model.ProductGroupId)
    </div>
    <div class="form-group">
        @Html.Label("Product", new { @class = "control-label" })
        @Html.DropDownListFor(m => m.ProductId, (IEnumerable<SelectListItem>)ViewBag.Products, new { @class = "form-control select2" })
        @Html.ValidationMessageFor(model => model.ProductId)
    </div>
    <div class="form-group">
        @Html.Label("Effective Date", new { @class = "control-label" })
        @Html.TextBoxFor(model => Model.EffectiveDate, new { @Value = Model.EffectiveDate.ToString("MM/dd/yyyy"), @class = "form-control datepicker", required = "required" })
    </div>
    <div class="form-group">
        @Html.Label("Expiration Date", new { @class = "control-label" })
        @Html.TextBoxFor(model => Model.ExpirationDate, new { @Value = Model.ExpirationDate.ToString("MM/dd/yyyy"), @class = "form-control datepicker", required = "required" })
    </div>
    <div class="form-group">

        @Html.Label("Product Price", new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">

        @Html.Label("New Price", new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.NewPrice, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Active, new { @class = "control-label" })
        <div class="input-group">
            @Html.CheckBoxFor(model => model.Active, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}

<script>
    $(function () {
        $(".datepicker").datepicker({
            dateFormat: 'mm/dd/yy',
            changeMonth: true,
            changeYear: true,
            todayHighlight: true,
            defaultDate: new Date(),
            setDate: 'now',
            autoclose: true
        });
    });
</script>